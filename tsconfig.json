{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "strict": false,                                 
    "baseUrl": "./src",                             
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,        
    "resolveJsonModule": true
  }
}